<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.TourIteneraryFragment">

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="@dimen/_10sdp"
                    android:text="Day"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp">

                </TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_itenearyday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_itinearytitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp"
                tools:text="Hello" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_itenearyimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none" />


            <TextView
                android:id="@+id/txt_itinearyinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/gray"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp"
                tools:text="Hello" />

            <TextView
                android:id="@+id/txt_itinearyincusion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/green"
                android:textSize="@dimen/_12ssp"
                tools:text="Hello" />

            <TextView
                android:id="@+id/txt_itinearydesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Met deze tour reist u van Paramaribo naar Meerzorg per veerboot, over de Surinaamse rivier. Geniet van een fietstocht door de tropische regenwouden. Vlinders, libellen, apen, luiaards en reptielen zijn enkele van de dieren die u tegen kunt komen. Halverwege het natuurpad kunt u langs de irrigatiekanalen struinen om de koffiebomen en de ‘kofimama’ (Erythrina glauca of schaduwaanbieders) te zien. Het pad leidt naar een historisch plantage dorp waar een tour door een oude koffiefabriek wordt gegeven. Langs de weg zult u kampongs zien, de huizen van voornamelijk Javaanse en Hindoestaanse inwoners. Op de terugweg naar Paramaribo zullen we een stop maken bij een lokaal restaurant voor een lunch bestaande uit heerlijke, lokale gerechten."
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>