<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_edge"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/txt_roomtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp"
                tools:text="ROOM 1" />

            <TextView
                android:id="@+id/txt_aminities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:maxLines="3"
                android:text="Ahmedabad, Gujarat, India"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/txt_moreaminities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="@string/res_view_more_amenities"
                android:textColor="@color/green"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/txt_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:maxLines="3"
                android:text="Ahmedabad, Gujarat, India"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/txt_moreoption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="@string/res_view_more_options"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/txt_included"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:maxLines="3"
                android:text="Ahmedabad, Gujarat, India"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/txt_moreinclude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="VIEW MORE INCLUDED"
                android:textColor="@color/green"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">

                <ImageView
                    android:id="@+id/img_room"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_moreimg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/gray"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone"
                tools:text="4 More" />


            <FrameLayout
                android:id="@+id/lay_baseprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/txt_baseprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="visible"
                    app:autoSizeTextType="uniform"
                    tools:text="USD 797.98" />

                <View
                    android:id="@+id/view_baseprice"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="1dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@color/gray" />


            </FrameLayout>

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:visibility="visible"
                tools:text="USD 797.98" />

            <TextView
                android:id="@+id/txt_saving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12ssp"
                android:visibility="visible"
                tools:text="Flat Off USD 2.02" />

            <TextView
                android:id="@+id/txt_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/green"
                android:textSize="@dimen/_12ssp"
                android:visibility="visible"
                tools:text="Flat Off USD 2.02" />

            <Button
                android:id="@+id/btn_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/curv_edgegreen"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="@string/select"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>